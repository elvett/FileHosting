generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  uniqName     String   @unique
  email        String?  
  hashPassword String
  files        Files[]
  folders      Folder[]       
  createdAt    DateTime @default(now())
}

model Files {
  name      String
  type      String
  size      Int
  id        Int       @id @default(autoincrement())
  private   Boolean   @default(true)
  uuid      String    @unique
  ownerId   Int
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
   
  folderUuid String? 
  folder    Folder?   @relation(fields: [folderUuid], references: [uuid])

  createdAt DateTime  @default(now())
}


model Folder {
  uuid        String      @unique 
  name        String
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  size        Int
  private     Boolean  @default(true)

  parentUuid  String?
  parent      Folder?   @relation("FolderToParent", fields: [parentUuid], references: [uuid])
  children    Folder[]  @relation("FolderToParent")

  files       Files[]
  createdAt   DateTime @default(now())
}
